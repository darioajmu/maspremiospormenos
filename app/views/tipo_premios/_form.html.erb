<%= form_for @tipo_premio do |f| %>

<% if @tipo_premio.errors.any? %>

<div>
    <error style="font-size:200%;"><%= pluralize(@tipo_premio.errors.count, "Error") %>, evita/n que el registro sea guardado:</error>
    <ul>
    <% @tipo_premio.errors.full_messages.each do |msg| %>
      <li ><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

  <div class="row fullWidth">
    <div class="large-4 columns">
      <%= f.label :codigo, "Codigo" %>
      <%= f.text_field:codigo%>
    </div>
    <div class="large-4  columns">
      <%= f.label :nombre, "Nombre" %>
      <%= f.text_field:nombre %>
    </div>
  </div>
  <div class="row fullWidth">
    <div class="large-12 columns">
      <%= f.submit "Enviar", class: "tiny button radius" %>
    </div>
  </div>
<% end %>
