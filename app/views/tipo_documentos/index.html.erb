<h1>Tipos de Documentos</h1>

<%= link_to "Nuevo Tipo de Documento", {:action => 'new', :controller => 'tipo_documentos'}, class: "small success button radius" if can?(:create, TipoDocumento)%>

  <table>
    <thead>
      <tr>
        <td>ID</td>
        <td>Codigo</td>
        <td>Nombre</td>
      </tr>
    </thead>
    <% @tipo_documentos.each do |t|%>
      <tr>
        <td><%= t.id %></td>
        <td><%= t.codigo%></td>
        <td><%= t.nombre %></td>
      </tr>
    <%end%>
